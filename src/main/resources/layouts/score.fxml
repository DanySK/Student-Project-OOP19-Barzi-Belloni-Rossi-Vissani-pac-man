<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" styleClass="mainPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.ScoreController">
   <children>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goBack" stylesheets="@style.css" HBox.hgrow="SOMETIMES">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../textures/images/back.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <ImageView pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
               <image>
                  <Image url="@../textures/images/TitleRanking.png" />
               </image>
            </ImageView>
            <Region style="-fx-background-color: white;" HBox.hgrow="SOMETIMES" />
         </children>
      </HBox>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" stylesheets="@style.css" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="name" editable="false" maxWidth="1000.0" minWidth="300.0" prefWidth="300.0" sortType="DESCENDING" sortable="false" text="Name" />
            <TableColumn fx:id="score" editable="false" maxWidth="1000.0" minWidth="290.0" prefWidth="290.0" sortType="DESCENDING" sortable="false" text="Score" />
            <TableColumn fx:id="level" editable="false" maxWidth="1000.0" minWidth="290.0" prefWidth="290.0" sortType="DESCENDING" sortable="false" text="Level" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <styleClass>
            <String fx:value="table-cell" />
            <String fx:value="table-row-cell" />
            <String fx:value="table-view" />
         </styleClass>
      </TableView>
   </children>
</VBox>
