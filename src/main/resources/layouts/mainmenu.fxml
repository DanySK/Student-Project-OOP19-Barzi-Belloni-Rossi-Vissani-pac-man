<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" styleClass="mainPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.MainMenuController">
   <children>
      <ImageView fitHeight="131.0" fitWidth="423.0" pickOnBounds="true" preserveRatio="true">
         <image>
         </image>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </ImageView>
      <HBox alignment="CENTER" prefHeight="190.0" prefWidth="700.0">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="newGameButton" maxWidth="400.0" minWidth="270.0" mnemonicParsing="false" onAction="#onNewGameClick" prefHeight="80.0" prefWidth="270.0" stylesheets="@style.css" text="New Game" HBox.hgrow="ALWAYS" />
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="190.0" prefWidth="700.0">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="scoreButton" maxWidth="400.0" minWidth="270.0" mnemonicParsing="false" onAction="#onScoreClick" prefHeight="80.0" prefWidth="270.0" stylesheets="@style.css" text="Score" HBox.hgrow="ALWAYS" />
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="190.0" prefWidth="700.0">
         <children>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="settingsButton" maxWidth="400.0" minWidth="270.0" mnemonicParsing="false" onAction="#onSettingsClick" prefHeight="80.0" prefWidth="270.0" stylesheets="@style.css" text="Settings" HBox.hgrow="ALWAYS" />
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
