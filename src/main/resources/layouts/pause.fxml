<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" styleClass="mainPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.controllers.PauseController">
   <children>
      <ImageView fitHeight="73.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../textures/images/TitlePause.png" />
         </image>
         <viewport>
            <Rectangle2D />
         </viewport>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ImageView>
      <HBox alignment="BOTTOM_CENTER" prefHeight="196.0" prefWidth="700.0" spacing="50.0" VBox.vgrow="ALWAYS">
         <children>
            <Region prefHeight="207.0" prefWidth="60.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="resume" maxHeight="-Infinity" maxWidth="650.0" mnemonicParsing="false" onAction="#onResumeClick" prefHeight="80.0" prefWidth="340.0" stylesheets="@style.css" text="RESUME" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="AnjaliOldLipi" size="39.0" />
               </font>
            </Button>
            <Region prefHeight="207.0" prefWidth="60.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="200.0" prefWidth="700.0" spacing="50.0" VBox.vgrow="ALWAYS">
         <children>
            <Region prefHeight="225.0" prefWidth="60.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="exit" maxHeight="-Infinity" maxWidth="300.0" mnemonicParsing="false" onAction="#onExitClick" prefHeight="120.0" prefWidth="120.0" stylesheets="@style.css" HBox.hgrow="ALWAYS" />
            <Button fx:id="restart" maxHeight="-Infinity" maxWidth="300.0" mnemonicParsing="false" onAction="#onRestartClick" prefHeight="120.0" prefWidth="120.0" stylesheets="@style.css" HBox.hgrow="ALWAYS" />
            <Region prefHeight="211.0" prefWidth="60.0" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
